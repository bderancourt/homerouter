http:
  routers:
    proxmox:
      rule: Host(`pve.{{ domain }}`)
      entrypoints:
        - websecure
      tls:
        certResolver: traefik_resolver
      service: proxmox

  services:
    proxmox:
      loadBalancer:
        servers:
          - url: https://192.168.{{ lan_subnet_id }}.2:8006
        serversTransport: insecureTransport

  serversTransports:
    insecureTransport:
      insecureSkipVerify: true
