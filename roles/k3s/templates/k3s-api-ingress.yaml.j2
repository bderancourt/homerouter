apiVersion: traefik.io/v1alpha1
kind: ServersTransport
metadata:
  name: api-server-transport
  namespace: default
spec:
  insecureSkipVerify: true

---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: kubernetes-api
  namespace: default
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`api.{{ domain }}`)
      kind: Rule
      services:
        - name: kubernetes
          port: 443
          scheme: https
          serversTransport: api-server-transport
  tls: {}
