apiVersion: v1
kind: Namespace
metadata:
  name: firefox
---
# NetworkPolicy: Allow intra-namespace traffic, deny inter-namespace by default
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-same-namespace
  namespace: firefox
spec:
  podSelector: {}
  policyTypes:
  - Ingress
  - Egress
  ingress:
  # Allow all traffic from same namespace
  - from:
    - podSelector: {}
  egress:
  # Allow all traffic to same namespace
  - to:
    - podSelector: {}
  # Allow DNS to kube-system
  - to:
    - namespaceSelector:
        matchLabels:
          kubernetes.io/metadata.name: kube-system
    ports:
    - protocol: UDP
      port: 53
    - protocol: TCP
      port: 53
---
# NetworkPolicy: Allow egress to access point
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-egress-ap
  namespace: firefox
spec:
  podSelector:
    matchLabels:
      app: firefox
  policyTypes:
  - Egress
  egress:
  - to:
    - ipBlock:
        cidr: 192.168.1.90/32
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: firefox
  namespace: firefox
spec:
  selector:
    matchLabels:
      app: firefox
  template:
    metadata:
      labels:
        app: firefox
    spec:
      containers:
        - name: firefox
          image: jlesage/firefox
          ports:
            - containerPort: 5800
              name: http
            - containerPort: 5900
              name: vnc
          env:
            - name: VNC_PASSWORD
              value: "homerouter"
---
apiVersion: v1
kind: Service
metadata:
  name: firefox
  namespace: firefox
spec:
  ports:
    - port: 5800
      name: http
    - port: 5900
      name: vnc
  selector:
    app: firefox
