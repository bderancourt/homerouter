apiVersion: v1
kind: Namespace
metadata:
  name: firefox
---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: deny-all-egress
  namespace: firefox
spec:
  podSelector: {}
  policyTypes:
  - Egress
---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-ap-access
  namespace: firefox
spec:
  podSelector:
    matchLabels:
      app: firefox
  policyTypes:
  - Egress
  egress:
  - to:
    - ipBlock:
        cidr: 192.168.1.90/32
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: firefox
  namespace: firefox
spec:
  selector:
    matchLabels:
      app: firefox
  template:
    metadata:
      labels:
        app: firefox
    spec:
      containers:
        - name: firefox
          image: jlesage/firefox
          ports:
            - containerPort: 5800
              name: http
            - containerPort: 5900
              name: vnc
          env:
            - name: VNC_PASSWORD
              value: "homerouter"
---
apiVersion: v1
kind: Service
metadata:
  name: firefox
  namespace: firefox
spec:
  ports:
    - port: 5800
      name: http
    - port: 5900
      name: vnc
  selector:
    app: firefox
