services:
  omada-controller:
    container_name: omada-controller
    image: mbentley/omada-controller:{{docker_omada_controller_version}}
    restart: unless-stopped
    ulimits:
      nofile:
        soft: 4096
        hard: 8192
    stop_grace_period: 60s
    environment:
      - PUID=508
      - PGID=508
      - MANAGE_HTTP_PORT=80
      - MANAGE_HTTPS_PORT=443
      - PORTAL_HTTP_PORT=8088
      - PORTAL_HTTPS_PORT=8843
      - PORT_APP_DISCOVERY=27001
      - PORT_ADOPT_V1=29812
      - PORT_UPGRADE_V1=29813
      - PORT_MANAGER_V1=29811
      - PORT_MANAGER_V2=29814
      - PORT_DISCOVERY=29810
      - PORT_TRANSFER_V2=29815
      - PORT_RTTY=29816
      - SHOW_SERVER_LOGS=true
      - SHOW_MONGODB_LOGS=false
      - SSL_CERT_NAME=tls.crt
      - SSL_KEY_NAME=tls.key
      - TZ=Europe/Paris
    volumes:
      - "{{ docker_omada_controller_volume_dir }}data:/opt/tplink/EAPController/data"
      - "{{ docker_omada_controller_volume_dir }}logs:/opt/tplink/EAPController/logs"
    networks:
      macvlan{{ vlan_id }}:
        ipv4_address: 192.168.{{ vlan_id }}.10

networks:
  macvlan{{ vlan_id }}:
    name: macvlan{{ vlan_id }}
    driver: macvlan
    driver_opts:
      parent: br-lan.{{ vlan_id }}
    ipam:
      config:
        - subnet: "192.168.{{ vlan_id }}.0/24"
          gateway: "192.168.{{ vlan_id }}.1"