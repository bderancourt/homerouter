services:
  {{ service }}:
    container_name: {{ service }}
    image: "mbentley/omada-controller:{{ image_version }}"
    restart: unless-stopped
    ulimits:
      nofile:
        soft: 4096
        hard: 8192
    stop_grace_period: 60s
    environment:
      - PUID=508
      - PGID=508
      - MANAGE_HTTP_PORT=80
      - MANAGE_HTTPS_PORT=443
      - PORTAL_HTTP_PORT=8088
      - PORTAL_HTTPS_PORT=8843
      - PORT_APP_DISCOVERY=27001
      - PORT_ADOPT_V1=29812
      - PORT_UPGRADE_V1=29813
      - PORT_MANAGER_V1=29811
      - PORT_MANAGER_V2=29814
      - PORT_DISCOVERY=29810
      - PORT_TRANSFER_V2=29815
      - PORT_RTTY=29816
      - SHOW_SERVER_LOGS=true
      - SHOW_MONGODB_LOGS=false
      - SSL_CERT_NAME=tls.crt
      - SSL_KEY_NAME=tls.key
      - TZ=Europe/Paris
    volumes:
      - "{{ docker_service_volumes_dir }}data:/opt/tplink/EAPController/data"
      - "{{ docker_service_volumes_dir }}logs:/opt/tplink/EAPController/logs"
    networks:
      net:
        ipv4_address: "{{ container_ipv4 }}"
        ipv6_address: "{{ container_ipv6 }}"

networks:
  net:
    enable_ipv6: true
    driver: macvlan
    driver_opts:
      parent: "{{ docker_interface }}"
    ipam:
      config:
        - subnet: "{{ network_subnet_ipv4 }}"
          gateway: "{{ gateway_ipv4 }}"
        - subnet: "{{ network_subnet_ipv6 }}"
          gateway: "{{ gateway_ipv6 }}"
