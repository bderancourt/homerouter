#!/bin/sh

#######################################
# Hardware specific config
#######################################

uci set network.lan.ipaddr='{{ inventory_hostname }}'
uci set network.wan6.peerdns='0'
uci add_list network.wan6.dns='2606:4700:4700::1111'
uci add_list network.wan6.dns='2606:4700:4700::1001'
uci set network.wan.peerdns='0'
uci add_list network.wan.dns='1.1.1.1'
uci add_list network.wan.dns='1.0.0.1'



uci delete network.@device[0].ports
{% for lan_port in lan_ports %}
uci add_list network.@device[0].ports='{{ lan_port }}'
{% endfor %}
