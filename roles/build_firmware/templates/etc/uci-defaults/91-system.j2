#!/bin/sh

#######################################
# change root password
#######################################

passwd root <<EOP
{{ root_password }}
{{ root_password }}
EOP

echo {{ ssh_key }} >> /etc/dropbear/authorized_keys

chmod u=rwx,g=,o= /root/checkaspm.sh

uci set system.system.timezone='CET-1CEST,M3.5.0,M10.5.0/3'
uci set system.system.zonename='Europe/Paris'
uci set system.system.log_size='2048'
uci set system.ntp.enable_server='1'
